extends layout
block content
  //link(rel="stylesheet" href="/stylesheets/signin.css")
  //link(rel="stylesheet" href="/stylesheets/navbar-fixed-top.css")
  //h1= title
  include nav.jade
  .container
    .panel.panel-info
      .panel-heading
        //.container
        h1.text-center 修改密码
      .panel-body
        //form(role="form", action="/resetPassword", method="POST")
        .col-sm-6.col-sm-offset-3
          br
          .input-group
            span.input-group-addon 账号名称
            input.form-control(type="text", name="username", autofocus="autofocus", placeholder="输入账号名称", required="required")
          .col-sm-12
            br
          .input-group
            span.input-group-addon 登录密码
            input.form-control(type="password", name="password", placeholder="输入新登录密码", required="required")
          .col-sm-12
            br
          .input-group
            span.input-group-addon 确认密码
            input.form-control(type="password", name="retryPassword", placeholder="再次输入相同登录密码", required="required")

        .col-sm-6.col-sm-offset-3
          br
          button.btn.btn-block.btn-default.btn-lg.btn-primary#submit 确&nbsp;&nbsp;&nbsp;&nbsp;定

        .col-sm-6.col-sm-offset-3.text-center
          br
          span#message


  script(src="/javascripts/resetPassword.js")