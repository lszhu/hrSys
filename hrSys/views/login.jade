extends layout
block content
  link(rel="stylesheet" href="/stylesheets/signin.css")
  //h1= title
  div.container
    form.form-signin(role="form", action="/login", method="POST")
      h2.form-signin-heading 请登录
      label(style="margin: 6px") 账号：
      input.form-control(type="text", name="username", placeholder="在此输入账号名称", required="required")
      label(style="margin: 6px") 密码：
      input.form-control(type="password", name="password", placeholder="在此输入登录密码", required="required")
      label.checkbox.hidden
        input(type="checkbox", name="rememberMe", value="rememberMe")
        span 记住我的账号
      button.btn.btn-lg.btn-primary.btn-block(type="submit") 登录

  if error
    h3.text-center.text-danger= error